{
  "expo": {
    "name": "Missionari della Via",
    "slug": "mdv-mobile",
    "version": "2.0.0",
    "sdkVersion": "54.0.0",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "scheme": "mdv",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo-mdv-aggiornato.png",
      "backgroundColor": "#6B4E3D",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "net.missionaridellavia.app",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6B4E3D"
      },
      "package": "net.missionaridellavia.app",
      "versionCode": 1
    },
    "extra": {
      "eas": {
        "projectId": "8c4d3c06-b865-416b-b7ee-311d268f2989"
      }
    },
    "plugins": [
      "expo-asset",
      [
        "expo-splash-screen",
        {
          "image": "./assets/logo-mdv-aggiornato.png",
          "backgroundColor": "#6B4E3D",
          "imageWidth": 200
        }
      ]
    ]
  }
}
